{% extends 'base.html.twig' %}

{% block title %}Montre publique #{{ montre.id }}{% endblock %}

{% block body %}
    <h1>Montre (publique)</h1>

    {% if montre.imageFilename %}
        <div class="mb-3">
            <img
                src="{{ asset('uploads/montres/' ~ montre.imageFilename) }}"
                alt="Photo de la montre {{ montre.marque }} {{ montre.reference }}"
                class="img-fluid rounded border"
                style="max-width: 300px;"
            >
        </div>
    {% endif %}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ montre.id }}</td>
        </tr>
        <tr>
            <th>Marque</th>
            <td>{{ montre.marque }}</td>
        </tr>
        <tr>
            <th>Référence</th>
            <td>{{ montre.reference }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ montre.description }}</td>
        </tr>
        <tr>
            <th>Année</th>
            <td>{{ montre.annee ?? '—' }}</td>
        </tr>
        </tbody>
    </table>

    <div class="alert alert-light border mt-3">
        <p class="mb-1">
            Cette montre est affichée dans la vitrine :
            <strong>{{ vitrine.description }}</strong>
            {% if vitrine.publiee %}
                <span class="badge bg-success ms-2">Publique</span>
            {% else %}
                <span class="badge bg-secondary ms-2">Privée</span>
            {% endif %}
        </p>
    </div>

    <div class="mt-3">
        <a class="btn btn-outline-secondary"
           href="{{ path('app_vitrine_show', { id: vitrine.id }) }}">
            ← Retour à la vitrine
        </a>
    </div>
{% endblock %}
