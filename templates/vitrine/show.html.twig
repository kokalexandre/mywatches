{% extends 'base.html.twig' %}

{% block title %}Vitrine #{{ vitrine.id }}{% endblock %}

{% block body %}
    <div class="container my-4">


        <div class="row mb-4">
            <div class="col-lg-8">
                <h1 class="h3 mb-1">
                    Vitrine : {{ vitrine.description ?: ('Vitrine #' ~ vitrine.id) }}
                </h1>
                <p class="text-muted mb-2">
                    Créée par : {{ vitrine.createur.email ?? '—' }}
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                {% if vitrine.publiee %}
                    <span class="badge bg-success">Publique</span>
                {% else %}
                    <span class="badge bg-secondary">Privée</span>
                {% endif %}
            </div>
        </div>


        <div class="row mb-4">
            <div class="col-lg-6">
                <table class="table table-sm align-middle mb-0">
                    <tbody>
                        <tr>
                            <th scope="row" style="width: 25%;">Id</th>
                            <td>{{ vitrine.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ vitrine.description ?: '—' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Statut</th>
                            <td>
                                {% if vitrine.publiee %}
                                    <span class="badge bg-success">Publique</span>
                                {% else %}
                                    <span class="badge bg-secondary">Privée</span>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <h2 class="h4 mb-3">Montres de cette vitrine</h2>

                {% if vitrine.montres is empty %}
                    <div class="alert alert-info">
                        Aucune montre dans cette vitrine pour le moment.
                    </div>
                {% else %}
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                        {% for m in vitrine.montres %}
                            <div class="col">
                                <a href="{{ path('app_vitrine_montre_show', {
                                    vitrine_id: vitrine.id,
                                    montre_id:  m.id
                                }) }}"
                                   class="text-decoration-none text-reset">
                                    <div class="card h-100 shadow-sm">
                                        {% if m.imageFilename %}
                                            <img
                                                src="{{ asset('uploads/montres/' ~ m.imageFilename) }}"
                                                alt="Photo de {{ m.marque }} {{ m.reference }}"
                                                class="card-img-top img-fluid"
                                                style="object-fit: cover; max-height: 180px;"
                                            >
                                        {% else %}
                                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                                 style="height: 180px;">
                                                <span class="text-muted small">Aucune photo disponible</span>
                                            </div>
                                        {% endif %}

                                        <div class="card-body py-2">
                                            <h3 class="h6 mb-1">
                                                {{ m.marque }} {{ m.reference }}
                                            </h3>
                                            <p class="mb-1 text-muted small">
                                                {{ m.description ?: 'Aucune description fournie.' }}
                                            </p>
                                            {% if m.annee %}
                                                <p class="mb-0 text-muted small">
                                                    Année : {{ m.annee }}
                                                </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>


        <div class="mt-4 d-flex flex-wrap gap-2">
            <a class="btn btn-outline-secondary"
               href="{{ path('app_member_show', { id: vitrine.createur.id }) }}">
                ← Retour au membre
            </a>

            <a class="btn btn-primary"
               href="{{ path('app_vitrine_edit', {'id': vitrine.id}) }}">
                Modifier cette vitrine
            </a>

            {{ include('vitrine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
